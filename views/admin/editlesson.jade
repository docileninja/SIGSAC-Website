include ../templates.jade
doctype html
html(lang="en")
    +_head("Admin Panel")
    body
        #site_strip
            +_header(loggedin, user)
            main
                +_admin()
                section.content
                    h2 Edit Lesson
                    form(action="/admin/lessons/edit/#{lesson.name}" method="POST")
                        h3 Title
                        p #{lesson.name}

                        h3 Markdown Description
                        textarea(name="markdown" style="height: 200px;" id="description") #{lesson.markdown}

                        h3 Image Link
                        input(type="text" name="image_link" value="#{lesson.image_link}" id="image_link")

                        h3 Video Link
                        input(type="text" name="video_link" value="#{lesson.video_link}" id="video_link")

                        h3 Preview
                        #preview
                            +_lesson(lesson)

                        h3 Code
                        input(type="text" name="code" value="#{lesson.code}")
                        input(type="submit" value="Update Lesson")
            +_footer()
    script(src="/lib/markdown.js")
    script(src="/lib/lesson-preview.js")