include ../templates.jade
doctype html
html(lang="en")
    +_head("Admin Panel")
    body
        #site_strip
            +_header(loggedin, user)
            main
                +_admin()
                section.content
                    h2 Add Lesson
                    form(action="/admin/lessons/addlesson" method="POST")
                        h3 Title
                        input(type="text" name="name")
                        h3 Description
                        textarea(name="description" style="height: 200px;")
                        h3 HTML Description
                        textarea(name="html_description" style="height: 200px;")
                        h3 Image Link
                        input(type="text" name="image_link")
                        h3 Video Link
                        input(type="text" name="video_link")
                        h3 Code
                        input(type="text" name="code")
                        input(type="submit" value="Add Lesson")
            +_footer()