include ./templates.jade
doctype html
html(lang="en")
    +_head("Sign up", stylesheets)
    body
        #site_strip
            +_header()
            main
                section#signin_box
                    h1 sign up
                    section#signin_bottom
                        form(action="/signup" method="POST")
                            label email:
                            input(type="text" name="email")
                            br
                            br
                            br
                            label password:
                            input(type="password" name="password")
                            br
                            br
                            br
                            div#button_div
                                input(type="submit" value="submit")
            +_footer()