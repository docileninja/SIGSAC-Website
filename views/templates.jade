mixin _head(name, stylesheets)
	head
		meta(charset="UTF-8")
		title= "SIGSAC | " + name
		link(rel="stylesheet" type="text/css" href="css/site.css")
		if locals.stylesheets
			each stylesheet in stylesheets
				link(rel="stylesheet" type="text/css" href="#{stylesheet}")

